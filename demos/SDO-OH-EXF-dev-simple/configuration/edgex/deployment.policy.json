{
    "label": "edgex",      
    "description": "Policy to auto deploy EdgeX Foundry 1.2",
    "service": {       
      "name": "intel.edgex-device-rest",
      "org": "myorg",    
      "arch": "amd64",    
      "serviceVersions": [ 
        {
          "version": "1.1.1",
          "priority":{}
        }
      ]
    },
    "properties": [
    ],
    "constraints": [ 
         "horizon.example==iot-gateway" 
    ], 
    "userInput": [ 
      {            
        "serviceOrgid": "myorg",
        "serviceUrl": "intel.edgex-device-rest",
        "serviceVersionRange": "[0.0.0,INFINITY)",
        "inputs": [
            {"name":"EDGEX_SECURITY_SECRET_STORE","value":"false"},
            {"name":"Registry_Host","value":"edgex-core-consul"},
            {"name":"Clients_CoreData_Host","value":"edgex-core-data"},
            {"name":"Clients_Data_Host","value":"edgex-core-data"},
            {"name":"Clients_Notifications_Host","value":"edgex-support-notifications"},
            {"name":"Clients_Metadata_Host","value":"edgex-core-metadata"},
            {"name":"Clients_Command_Host","value":"edgex-core-command"},
            {"name":"Clients_Scheduler_Host","value":"edgex-support-scheduler"},
            {"name":"Clients_RulesEngine_Host","value":"edgex-kuiper"},
            {"name":"Clients_VirtualDevice_Host","value":"edgex-device-virtual"},
            {"name":"Databases_Primary_Host","value":"edgex-redis"},
            {"name":"Logging_EnableRemote","value":"false"},
            {"name":"Service_Host","value":"edgex-device-rest"}
        ]
      }
    ]
  }