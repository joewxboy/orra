{
	"org": "${HZN_ORG_ID}",
	"url": "intel.edgex-device-mqtt",
	"version": "2.1.0",
	"arch": "amd64",
	"public": false,
	"sharable": "singleton",
	"requiredServices": [{
			"org": "${HZN_ORG_ID}",
			"url": "${REDIS_URL}",
			"version": "${REDIS_VERSION}",
			"arch": "${ARCH}"
		},
		{
			"org": "${HZN_ORG_ID}",
			"url": "intel.edgex-core-metadata",
			"version": "2.1.0",
			"arch": "amd64"
		},
		{
			"org": "${HZN_ORG_ID}",
			"url": "intel.edgex-mqtt-broker",
			"version": "2.0.12",
			"arch": "amd64"
		}
	],
	"userInput": [{
			"name": "EDGEX_SECURITY_SECRET_STORE",
			"type": "boolean",
			"defaultValue": "false"
		},
		{
			"name": "REGISTRY_HOST",
			"type": "string",
			"defaultValue": "edgex-core-consul"
		},
		{
			"name": "CLIENTS_METADATA_HOST",
			"type": "string",
			"defaultValue": "edgex-core-metadata"
		},
		{
			"name": "SERVICE_HOST",
			"type": "string",
			"defaultValue": "edgex-device-mqtt"
		}
	],
	"deployment": {
		"services": {
			"edgex-device-mqtt": {
				"image": "edgexfoundry/device-mqtt:2.1.0",
				"binds": [
					"$APP_BIND_HORIZON/res/device-mqtt/:/res/"
				],
				"ports": [{
					"HostIP": "127.0.0.1",
					"HostPort": "59982:59982/tcp"
				}]
			}
		}
	}
}